{% extends "layout.njk" %}

{% block head %}
<title>Sobre - Kallel Roman</title>
{% endblock%}

{% block content %}
  <div id="wrapper">
    <img src="{{ about.logo }}" alt="Logo">
    <h1>{{ about.name }}</h1>
    <h2>{{ about.description }}</h2>
    <h3>Tecnologias</h3> 
    <ul>
      {% for tech in about.techs %}
        <li>{{ tech }}</li>
      {% endfor %}
    </ul>

    <div id="links-footer" class="links">
      {% for link in about.links %}
        <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
      {% endfor %}
    </div>
  </div>

{% endblock %}